{
    # таймаут подключения задаётся переменной MOJO_IRC_CONNECT_TIMEOUT, в секундах, что есть форменное пидорство
    "server" : "localhost",

    "port" : 6667,

    # 0 если ssl не нужен и 1 - если нужен. Проверка ssl сертификата выключена, так как нам надо работать
    "ssl" : 0,

    # к нему же мы приводим и user и real name
    "nick" : "aleesa",

    # каналы, на которые заходит бот. предполагается, что бот заходит на каналы в обязательном порядке
    "channels": [
        "#a",
        "#b"
    ],

    # редиска, через которую бот общается с другини компонентами
    "redisaddr" : "redis",
    "redisport" : 6379,

    # 1 если запускаемся как unix daemon и 0 - если нет
    "daemonize" : 0,

    # обычный пользователь, от имени которого запускается приложение
    "user" : "nobody",

    # команды бота начинаются с этого символа, крайне желательно, чтобы он был одинаковым на всех компонентах
    "csign": "!",

    # в этот файл пишем логи
    "log" : "/var/log/aleesa-irc/aleesa-irc.log",

    # ditto
    "pid" : "/var/run/aleesa-irc/aleesa-irc.pid"
}
